def caesar_cipher(text, shift):
    f="" 
    for char in text:  
        if char.isalpha(): 
            if char.isupper():  
                replacement = chr((ord(char)-65+shift)%26+65)
            else:  
                replacement = chr((ord(char)-65+shift)%26+97)
            f+=replacement  
        else:
            f+=char 
    print(f)

text = input("enter a string to encode: ")  
shift = int(input("enter the shift amount: ")) 

caesar_cipher(text, shift)


